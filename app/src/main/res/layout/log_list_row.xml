<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp">

        <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
            android:id="@+id/contact_log_title"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/circular_textview"
            android:gravity="center"
            android:text="AD"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.posfone.promote.posfone.Utils.TitilliumWebTextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/contact_log_title"
            android:text="Andre Doe"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <com.posfone.promote.posfone.Utils.TitilliumWebTextView
            android:id="@+id/contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_name"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/contact_log_title"
            android:text="Andre Doe"
            android:textSize="13sp" />

        <com.posfone.promote.posfone.Utils.TitilliumWebTextView
            android:id="@+id/contact_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_number"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/contact_log_title"
            android:text="Andre Doe"
            android:textColor="@color/wallet_holo_blue_light"
            android:textSize="10sp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/call_green"
            android:id="@+id/call_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@drawable/side_nav_bar" />
</android.support.v7.widget.CardView>