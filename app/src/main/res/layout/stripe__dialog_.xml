<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/pay_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:background="@drawable/round_bg_border_white_solid_white"
        android:padding="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/txt_plan_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package Type"
            android:textStyle="bold"
            android:textColor="@color/color_phone_number"
            />

        <TextView
            android:id="@+id/txt_plan_exire_date"
            android:layout_below="@+id/txt_plan_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expire - 20/12/2018"
            android:textSize="11sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_phone_number"
            />

        <TextView
            android:id="@+id/btn_upgrade_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/round_bg_textview"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            />

    </RelativeLayout>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_card_view"
        android:layout_below="@+id/top"
        android:background="@color/color_profile_divider"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginTop="@dimen/action_bar_title_size"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_profile_divider"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/action_bar_title_size"
                android:src="@drawable/plus_sign"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Card"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="@dimen/action_bar_icon_size"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>



    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:id="@+id/below"
        android:layout_margin="16dp"
        android:layout_below="@+id/add_card_view"
        android:minWidth="480dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="42dp"
            android:id="@+id/shake_effect"
            android:background="@drawable/stripe_dialog_background"
            android:orientation="vertical">


            <LinearLayout
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingTop="0dp">



                <TextView
                    android:id="@+id/stripe_dialog_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:padding="2dp"
                    android:text="@string/app_name"
                    android:textColor="#ffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stripe_dialog_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    android:layout_marginBottom="4dp"
                    android:textColor="#ffff"
                    android:textSize="12sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/stripe_dialog_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    android:layout_marginBottom="4dp"
                    android:textColor="#ffff"
                    android:textSize="12sp" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/stripe_dialog_email_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ffff" />

                    <TextView
                        android:id="@+id/stripe_dialog_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#ffff"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>



            <View
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/stripe_inputbox_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/stripe_dialog_card_container"
                        android:animateLayoutChanges="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.posfone.promote.posfone.stripe.utils.ui.StripeImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic__stripe_card" />

                        <EditText
                            android:id="@+id/stripe_dialog_card"
                            android:background="@null"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:layout_weight="1"
                            android:digits="0123456789"
                            android:inputType="number"
                            android:maxLength="19"
                            android:hint="Card number"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/stripe_dialog_card_icon"
                            android:visibility="gone"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/ic__visa"
                            android:adjustViewBounds="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CCCCCC" />

                    <LinearLayout

                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/stripe_dialog_date_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.posfone.promote.posfone.stripe.utils.ui.StripeImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_stripe_date" />

                            <EditText
                                android:id="@+id/stripe_dialog_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:background="@null"
                                android:hint="MM / YY"
                                android:lines="1"
                                android:maxLength="5"
                                android:inputType="number"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#CCCCCC" />

                        <LinearLayout
                            android:id="@+id/stripe_dialog_cvc_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.posfone.promote.posfone.stripe.utils.ui.StripeImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_stripe_cvc" />

                            <EditText
                                android:id="@+id/stripe_dialog_cvc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:hint="CVC"
                                android:maxLength="3"
                                android:background="@null"
                                android:inputType="number"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/stripe_dialog_paybutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/buttoncircle"
                    android:padding="8dp"
                    android:text="Pay $19.99"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:id="@+id/top_icon"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerInParent="true"
                android:id="@+id/stripe__logo"
                android:layout_width="68dp"
                android:src="@drawable/ic_launcher"
                android:layout_height="68dp"
                 />

        </RelativeLayout>


    </FrameLayout>

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:padding="10dp"
        android:layout_marginTop="@dimen/action_bar_title_size"
        android:layout_below="@+id/below"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/action_bar_title_size"
        custom:progress_unreached_color="@color/color_light_green"
        custom:progress_reached_color="@color/colorPrimary"

        custom:progress_unreached_bar_height="2dp"
        custom:progress_reached_bar_height="4.5dp"

        custom:progress_text_size="13sp"
        custom:progress_text_color="@color/colorPrimary"
        custom:progress_text_offset="1dp"
        custom:progress_text_visibility="visible"

        custom:progress_max="100"
        custom:progress_current="5"

        />

</RelativeLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>