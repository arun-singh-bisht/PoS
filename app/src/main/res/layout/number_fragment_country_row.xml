<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="17dp"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/img_flag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/flag"
        android:background="@drawable/round_bg_border_highlight"
        android:padding="5dp"
        android:layout_centerVertical="true"
        />

    <com.posfone.promote.posfone.Utils.TitilliumWebTextView
        android:id="@+id/txt_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_flag"
        android:text=""
        android:textColor="@color/color_phone_number"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        />

    <com.posfone.promote.posfone.Utils.TitilliumWebTextView
        android:id="@+id/txt_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:textStyle="bold"
        />

</RelativeLayout>