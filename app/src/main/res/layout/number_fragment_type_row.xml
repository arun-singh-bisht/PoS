<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="17dp"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/img_flag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/flag"
        android:background="@drawable/round_bg_border_highlight"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <com.posfone.promote.posfone.Utils.TitilliumWebTextView
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+44 7447 301397"
        android:textColor="@color/color_phone_number"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        />

    <com.posfone.promote.posfone.Utils.TitilliumWebTextView
        android:id="@+id/txt_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_bg_textview"
        android:textColor="#ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="12sp"
        />

</RelativeLayout>