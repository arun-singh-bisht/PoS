<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/app_bar" layout="@layout/app_bar_custom"></include>

    <ScrollView

    android:layout_height="match_parent"
    android:background="#ffff"
    android:layout_width="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/package_name"
                android:textSize="16sp"
                android:text="Trial package"
                />
            <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:text="Transaction ID: 234"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />

            <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/due_sub_date"
                android:text="21 July 2018 | 2:13 PM"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >
            <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/total_chargeable_amount"
                android:text="11.46 $"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:text="Approved"
                android:textSize="10sp"
                android:background="@drawable/round_bg_textview"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="-30dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            >

            <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/package_pay729_number"
                android:text="+44-254-9876"
                android:textColor="@color/color_phone_number"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Package Gateway"
                    android:textSize="13sp"
                    />

                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/package_gateway"
                    android:text="11.22 $"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Bundle"
                    android:textSize="13sp"
                    />

                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/call_bundle"
                    android:text="11.22 $"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Package_contract"
                    android:id="@+id/p_c"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:background="@drawable/bdge"
                    android:text="Monthly"
                    android:padding="@dimen/dimen_2dp"
                    android:textSize="10sp"
                    android:textColor="#ffff"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/p_c"
                    />

                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.22 $"
                    android:id="@+id/package_contract"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total subscription due"
                    android:id="@+id/s_d"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:background="@drawable/bdge"
                    android:text="Monthly"
                    android:padding="@dimen/dimen_2dp"
                    android:textSize="10sp"
                    android:textColor="#ffff"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/s_d"
                    />

                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.22 $"
                    android:id="@+id/total_sub_due"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_profile_divider"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subscription Charge"
                    android:textSize="13sp"
                    android:id="@+id/s_c"
                    />
                <TextView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:background="@drawable/bdge"
                    android:text="Monthly"
                    android:padding="@dimen/dimen_2dp"
                    android:textSize="10sp"
                    android:textColor="#ffff"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/s_c"
                    />

                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.22 $"
                    android:id="@+id/subscription_charge"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gateway Charge"
                    android:textSize="13sp"
                    android:id="@+id/g_c"
                    />
                <TextView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:background="@drawable/bdge"
                    android:text="Monthly"
                    android:padding="@dimen/dimen_2dp"
                    android:textSize="10sp"
                    android:textColor="#ffff"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/g_c"
                    />
                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.22 $"
                    android:id="@+id/gateway_charge"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Monthly Cost"
                    android:textSize="13sp"
                    />

                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.22 $"
                    android:id="@+id/total_monthly_cost"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total charge till date"
                    android:textSize="13sp"
                    />

                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.22 $"
                    android:id="@+id/total_sub_cost_till_date"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/u_l"
                    android:text="User License"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:background="@drawable/bdge"
                    android:text="Monthly"
                    android:padding="@dimen/dimen_2dp"
                    android:textSize="10sp"
                    android:textColor="#ffff"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/u_l"
                    />
                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.22 $"
                    android:id="@+id/user_license"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vat"
                    android:textSize="13sp"
                    />

                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.22 $"
                    android:id="@+id/vat"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_profile_divider"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                >

                <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="13sp"
                    />

                <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.22 $"
                    android:id="@+id/total_amount"
                    android:textColor="@color/color_phone_number"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <com.posfone.promote.posfone.Utils.TitilliumWebTextView
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAY NOW"
        android:gravity="center"
        android:textSize="@dimen/get_a_pay_text_size"
        android:background="@drawable/round_bg_textview"
        android:textColor="#ffffff"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginEnd="@dimen/dimen_40dp"
        android:padding="@dimen/sign_in_button_padding"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/dimen_40dp"
        />
</LinearLayout>
</ScrollView>
</LinearLayout>