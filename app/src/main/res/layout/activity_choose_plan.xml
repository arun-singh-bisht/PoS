<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/app_bar_custom"
        ></include>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    >

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:background="@color/color_choose_plan_green_top"
         android:padding="20dp"
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Plan"
                android:textColor="#ffffff"
                android:textSize="@dimen/free_plan_text_size"
                />
            <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 $"
                android:textColor="#ffffff"
                android:textSize="@dimen/free_plan_rate_text_size"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />
            <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free 7 days"
                android:textColor="#ffffff"
                android:textSize="@dimen/free_days_text_size"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


         <com.posfone.promote.posfone.Utils.TitilliumWebTextView
             android:id="@+id/get_free_number"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#ffffff"
             android:text="Select"
             android:textSize="@dimen/get_number_text_size"
             android:background="@drawable/round_bg_textview"
             android:paddingLeft="14dp"
             android:paddingRight="14dp"
             android:paddingBottom="8dp"
             android:paddingTop="8dp"
             android:layout_alignParentRight="true"
             />

     </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_choose_plan_green_mid"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Number Plan"
                android:textColor="#ffffff"
                android:textSize="@dimen/free_plan_text_size"
                />
            <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.99 $"
                android:textColor="#ffffff"
                android:textSize="@dimen/free_plan_rate_text_size"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />
            <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per month"
                android:textColor="#ffffff"
                android:textSize="@dimen/free_days_text_size"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <com.posfone.promote.posfone.Utils.TitilliumWebTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Select"
            android:textSize="@dimen/get_number_text_size"
            android:background="@drawable/round_bg_textview"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_choose_plan_green_bottom"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elite Number Plan"
                android:textColor="#ffffff"
                android:textSize="@dimen/free_plan_text_size"
                />
            <com.posfone.promote.posfone.Utils.TitilliumWebBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.99 $"
                android:textColor="#ffffff"
                android:textSize="@dimen/free_plan_rate_text_size"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />
            <com.posfone.promote.posfone.Utils.TitilliumWebTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per month"
                android:textColor="#ffffff"
                android:textSize="@dimen/free_days_text_size"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <com.posfone.promote.posfone.Utils.TitilliumWebTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Select"
            android:textSize="@dimen/get_number_text_size"
            android:background="@drawable/round_bg_textview"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</LinearLayout>

</LinearLayout>